main.c

    void
    setup()
{
  Serial.begin(9600);
  pinMode(2, OUTPUT);
  digitalWrite(2, LOW);
}

void loop()
{
  int temp;
  float temp2;
  temp = analogRead(A0);
  temp2 = (temp * 4.88);
  temp2 = (temp2 / 10);
  Serial.print("\n Temperature = ");
  Serial.print(temp2);
  Serial.print("C");
  if (temp2 < 30)
  {
    digitalWrite(2, LOW);
  }
  else
  {
    digitalWrite(2, HIGH);
  }
}
